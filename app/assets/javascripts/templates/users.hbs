<h1>Users</h1>
<div class="span3">
  <table class='table table-striped'>
    <tr>
      <th>ID</th>
      <th>Name</th>
    </tr>
    {{#each controller}}
        <tr>
            <td>{{id}}</td>
            <!-- Link to the show named route and passing the user through 'this' -->
            <td>{{#linkTo "users.show" this}}{{fullName}}{{/linkTo}}</td>
        </tr>
    {{/each}}
  </table>
</div>

<div class="span8">
  {{outlet}}
</div>